{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:eslint-comments/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-comments",
    "import",
    "unused-imports"
  ],
  "rules": {
    "no-console": "off",
    "no-undef": "off",
    "no-case-declarations": "off"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "coverage"
  ]
}